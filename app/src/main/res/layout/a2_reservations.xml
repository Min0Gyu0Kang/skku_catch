<!-- res/layout/a2_restaurant_item.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/a2_thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/a2_restaurant_name"
        android:layout_width="149dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="Restaurant"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/a2_thumbnail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/a2_open_close"
        android:layout_width="124dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:text="10:00-22:00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toEndOf="@+id/a2_restaurant_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/a2_location_rating"
        android:layout_width="276dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:text="Location/Rating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/a2_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/a2_open_close" />
</androidx.constraintlayout.widget.ConstraintLayout>